{
  "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "lib": [
          "es2019"
      ],
      "declaration": false,
      "sourceMap": true,
      "strict": false,
      "baseUrl": "./",
      "typeRoots": [
          "node_modules/@types",
          "@types/*"
      ],
      "types": [
          "node"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": [
      "./src/**/*.ts",
      "./test/**/*.ts",
      "@types"
  ],
  "exclude": [
      "node_modules"
  ]
}
